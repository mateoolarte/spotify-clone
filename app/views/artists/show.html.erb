<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8">
      <h1><%= @artist.name %></h1>
      <div class="container-fluid">
        <div class="row">
          <div class="col-sm-12">
            <h3>Albums (<%= @artist.albums.count %>)</h3>
          </div>
          <% @artist.albums.each do |album| %>
            <div class="col-sm-12 col-md-4">
              <div class="thumbnail">
                <img src="<%= album.image_url %>" alt="<%= album.name %>">
                <div class="caption">
                  <h4>
                    <%= album.name %>
                  </h4>
                  <p>
                    <%= album.released_at.year %>
                  </p>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
    <div class="col-sm-12 col-md-4">
      <img src="<%= @artist.image_url %>" class="img-responsive" alt="Responsive image">
    </div>
  </div>
</div>